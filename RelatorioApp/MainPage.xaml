    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True" x:Name="AppMainPage">

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar Opacity="0.6" IsVisible="True" IsMenuEnabled="True" BackgroundColor="#FF19697D" ForegroundColor="White">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="sobreAppBar" Text="Sobre" Click="sobreAppBar_Click"/>
            </shell:ApplicationBar.MenuItems>
            <shell:ApplicationBarIconButton x:Name="AppBarrSalvar" IconUri="/Assets/AppBar/appbar.save.rest.png" Text="Salvar" Click="AppBarrSalvar_Click"/>
            <shell:ApplicationBarIconButton x:Name="AppBarConfigButton" IconUri="/Assets/AppBar/appbar.feature.settings.rest.png" Text="Config" Click="AppBarConfigButton_Click"/>
            <shell:ApplicationBarIconButton x:Name="Iniciar" IconUri="/Assets/AppBar/appbar.transport.play.rest.png" Text="Iniciar" Click="Iniciar_Click"/>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <phone:PhoneApplicationPage.Resources>
        <shell:ApplicationBar x:Key="DefaultAppBar"  Opacity="0.6" BackgroundColor="#FF19697D" ForegroundColor="White">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="sobreAppBar1" Text="Sobre" Click="sobreAppBar_Click"/>
            </shell:ApplicationBar.MenuItems>
            <shell:ApplicationBarIconButton x:Name="AppBarrSalvar1" IconUri="/Assets/AppBar/appbar.save.rest.png" Text="Salvar" Click="AppBarrSalvar_Click"/>
            <shell:ApplicationBarIconButton x:Name="AppBarConfigButton1" IconUri="/Assets/AppBar/appbar.feature.settings.rest.png" Text="Config" Click="AppBarConfigButton_Click"/>
            <shell:ApplicationBarIconButton x:Name="Iniciar1" IconUri="/Assets/AppBar/appbar.transport.play.rest.png" Text="Iniciar" Click="Iniciar_Click"/>
        </shell:ApplicationBar>

        <shell:ApplicationBar x:Key="IniciadoContAppBar"  Opacity="0.6" BackgroundColor="#FF19697D" ForegroundColor="Black">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="sobreAppBar2" Text="Sobre" Click="sobreAppBar_Click"/>
            </shell:ApplicationBar.MenuItems>
            <shell:ApplicationBarIconButton x:Name="AppBarrSalvar2" IconUri="/Assets/AppBar/appbar.save.rest.png" Text="Salvar" Click="AppBarrSalvar_Click"/>
            <shell:ApplicationBarIconButton x:Name="AppBarConfigButton2" IconUri="/Assets/AppBar/appbar.feature.settings.rest.png" Text="Config" Click="AppBarConfigButton_Click"/>
            <shell:ApplicationBarIconButton x:Name="Parar" IconUri="/Assets/AppBar/appbar.transport.pause.rest.png" Text="Parar" Click="Iniciar_Click"/>
        </shell:ApplicationBar>

        <Storyboard x:Name="myStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="AppMainPage"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0" Duration="0:0:0.25"
                AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Name="leftMoveStoryboard" >
            <DoubleAnimation
                Storyboard.TargetName="SomatoriosGroup"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1.5"/>
            <DoubleAnimation
                Storyboard.TargetName="MetasGrid"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1"/>
            <DoubleAnimation
                Storyboard.TargetName="TitlePanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                Duration="0:0:0.5" From="-500" To="0"/>
        </Storyboard>

        <Storyboard x:Name="rigthMoveStoryboard" >
            <DoubleAnimation
                Storyboard.TargetName="SomatoriosGroup"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1.5"/>
            <DoubleAnimation
                Storyboard.TargetName="MetasGrid"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1"/>
            <DoubleAnimation
                Storyboard.TargetName="TitlePanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
                Duration="0:0:0.5" From="500" To="0"/>
        </Storyboard>

        <Storyboard x:Name="downStoryboard" >
            <DoubleAnimation
                Storyboard.TargetName="LayoutRoot"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1"/>
            <DoubleAnimation
                Storyboard.TargetName="LayoutRoot"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                Duration="0:0:0.5" From="-500" To="0"/>
        </Storyboard>

        <Storyboard x:Name="upStoryboard" >
            <DoubleAnimation
                Storyboard.TargetName="LayoutRoot"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:1"/>
            <DoubleAnimation
                Storyboard.TargetName="LayoutRoot"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                Duration="0:0:0.5" From="500" To="0"/>
        </Storyboard>
    </phone:PhoneApplicationPage.Resources>

